<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="course_tree" model="ir.ui.view">
    <field name="name">openacademy.course.tree</field>
    <field name="model">openacademy.course</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
        </tree>
    </field>
</record>

<record id="course_form" model="ir.ui.view">
  <field name="name">openacademy.course.form</field>
  <field name="model">openacademy.course</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="course_dashboard" model="ir.ui.view">
  <field name="name">openacademy.course.kanban</field>
  <field name="model">openacademy.course</field>
  <field name="priority">10</field>
  <field name="arch" type="xml">
      <kanban>
          <field name = "name"/>
      <templates>
          <t t-name="kanban-box">
              <div>
                  <ul>
                      <li t-if="record.name.raw_value">Class Name: <field name="name"/></li>
                  </ul>
              </div>
          </t>
      </templates>
      </kanban>
  </field>
</record>


  <record model="ir.actions.act_window" id="course_list_action">
    <field name="name">Courses</field>
    <field name="res_model">openacademy.course</field>
    <field name="view_mode">kanban, tree,form</field>
    <field name="help" type="html">
      <p>
        Create the first course
      </p>
    </field>
  </record>
  <menuitem id="main_openacademy_menu" name="Open Academy" />

  <menuitem id="openacademy_menu" name="Open Academy" parent="main_openacademy_menu" />
  <menuitem id="courses_menu" name="Courses" parent="openacademy_menu" action="course_list_action" />

</odoo>